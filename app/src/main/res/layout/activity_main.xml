<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:text="  Ö´Ö¶Ö¸ ð“‚ƒË–Ë³Â·Ë– Ö´Ö¶Ö¸ â‹†Car Rent Neibsâ‹†Ö´Ö¶Ö¸Ë–Â·Ë³Ë–ð“‚ƒ Ö´Ö¶Ö¸"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvType"
        android:text="Car Type"
        android:textSize="20sp"
        android:textStyle="normal"
        android:padding="8dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btnPajero"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Pajero"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/btnAlphard"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Alphard"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/btnInova"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Inova"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/btnBrio"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Brio"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvOutsideCity"
        android:text="Outside City"
        android:textSize="20sp"
        android:textStyle="normal"
        android:padding="8dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rg2"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/btnInsideCity"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Inside City"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/btnOutsideCity"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Outside City"
        android:textColor="@color/black"
        android:textSize="16sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvDay"
        android:text="Day of Rent"
        android:textSize="20sp"
        android:textStyle="normal"
        android:padding="8dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Day">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnRent"
        android:text="Rent"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>